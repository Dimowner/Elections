<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

	<View
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:progress="50"
			android:layout_marginTop="@dimen/spacing_small"
			android:layout_marginBottom="@dimen/spacing_small"
			android:layout_marginStart="80dp"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:layout_gravity="bottom"
			android:focusable="true"
			android:clickable="true"
			android:background="@drawable/ripple_blue_40"
			android:elevation="@dimen/toolbar_elevation"
			/>

	<ProgressBar
			style="@style/Widget.ToolbarProgress"
			android:id="@+id/lit_item_percentage"
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:progress="50"
			android:layout_marginTop="@dimen/spacing_small"
			android:layout_marginBottom="@dimen/spacing_small"
			android:layout_marginStart="80dp"
			android:layout_marginEnd="@dimen/spacing_normal"
			app:layout_scrollFlags="scroll|enterAlways"
			android:layout_gravity="bottom"
			android:elevation="@dimen/toolbar_elevation"
			/>

	<LinearLayout
			android:id="@+id/item_panel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="32dp"
			android:paddingStart="56dp"
			android:layout_marginEnd="50dp"
			android:paddingEnd="@dimen/spacing_small"
			android:elevation="@dimen/toolbar_elevation"
			>

		<TextView
				style="@style/Text.NormalLabel"
				android:id="@+id/list_item_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:textSize="@dimen/text_xmedium"
				android:fontFamily="@font/google_sans"
				android:paddingLeft="@dimen/spacing_normal"
				android:paddingStart="@dimen/spacing_normal"
				android:paddingRight="@dimen/spacing_normal"
				android:paddingEnd="@dimen/spacing_normal"
				android:maxLines="2"
				tools:text="asfasfasfasf a s f a s f a s f a s f a s f a"
				/>

		<TextView
				style="@style/Text.Subheader"
				android:id="@+id/list_item_description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_medium"
				tools:text="@string/app_name"
				android:paddingLeft="@dimen/spacing_normal"
				android:paddingStart="@dimen/spacing_normal"
				android:paddingRight="@dimen/spacing_normal"
				android:paddingEnd="@dimen/spacing_normal"
				android:maxLines="1"/>
	</LinearLayout>

	<ImageView
			android:id="@+id/list_item_image"
			android:layout_width="80dp"
			android:layout_height="80dp"
			app:srcCompat="@mipmap/ic_elections"
			android:src="@mipmap/ic_elections"
			android:layout_gravity="center_vertical"
			android:scaleType="centerCrop"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:layout_marginTop="@dimen/spacing_small"
			android:layout_marginBottom="@dimen/spacing_small"
			android:elevation="8dp"
			android:background="@drawable/circle_grey"
			android:contentDescription="@string/item_image"/>

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/spacing_normal"
			android:padding="@dimen/spacing_small"
			android:layout_gravity="center_vertical|end"
			android:elevation="@dimen/toolbar_elevation"
			android:orientation="vertical"
			>
		<TextView
				style="@style/Text.NormalLabel"
				android:id="@+id/list_item_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="56%"
				/>
		<TextView
				style="@style/Text.Subheader"
				android:id="@+id/list_item_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="540"
				/>
	</LinearLayout>

</FrameLayout>
