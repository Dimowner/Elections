<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

	<LinearLayout
			android:id="@+id/item_panel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="32dp"
			android:paddingStart="56dp"
			android:clickable="true"
			android:focusable="true"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:paddingBottom="@dimen/spacing_small"
			android:paddingTop="@dimen/spacing_small"
			android:paddingEnd="@dimen/spacing_small"
			android:background="@drawable/ripple_blue"
			android:elevation="@dimen/toolbar_elevation"
			>

		<TextView
				style="@style/Text.NormalLabel"
				android:id="@+id/list_item_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:textSize="@dimen/text_large"
				android:fontFamily="@font/google_sans"
				android:paddingLeft="@dimen/spacing_normal"
				android:paddingStart="@dimen/spacing_normal"
				android:paddingRight="@dimen/spacing_normal"
				android:paddingEnd="@dimen/spacing_normal"
				android:maxLines="2"
				tools:text="asfasfasfasf asfa sfasf asfa sfa fas fasf afs asf ads "
				/>

		<TextView
				style="@style/Text.Subheader"
				android:id="@+id/list_item_description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_medium"
				tools:text="@string/app_name"
				android:paddingLeft="@dimen/spacing_normal"
				android:paddingStart="@dimen/spacing_normal"
				android:paddingRight="@dimen/spacing_normal"
				android:paddingEnd="@dimen/spacing_normal"
				android:maxLines="1"/>
	</LinearLayout>

	<ImageView
			android:id="@+id/list_item_image"
			android:layout_width="80dp"
			android:layout_height="80dp"
			app:srcCompat="@mipmap/ic_elections2"
			android:src="@mipmap/ic_elections2"
			android:layout_gravity="center_vertical"
			android:scaleType="centerCrop"
			android:layout_marginStart="@dimen/spacing_normal"
			android:layout_marginEnd="@dimen/spacing_normal"
			android:layout_marginTop="@dimen/spacing_small"
			android:layout_marginBottom="@dimen/spacing_small"
			android:elevation="8dp"
			android:background="@drawable/circle_grey"
			android:contentDescription="@string/item_image"/>

</FrameLayout>
